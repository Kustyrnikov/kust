import datetime

def format_date(date_str):
    try:
        date = datetime.datetime.strptime(date_str, "%d.%m.%Y")
    except ValueError:
        return "Ошибка: Некорректный формат даты или несуществующая дата"

    days = {
        0: "Понедельник",
        1: "Вторник",
        2: "Среда",
        3: "Четверг",
        4: "Пятница",
        5: "Суббота",
        6: "Воскресенье"
    }

    months = {
        1: "Января",
        2: "Февраля",
        3: "Марта",
        4: "Апреля",
        5: "Мая",
        6: "Июня",
        7: "Июля",
        8: "Августа",
        9: "Сентября",
        10: "Октября",
        11: "Ноября",
        12: "Декабря"
    }

    try:
        day_name = days[date.weekday()]
        month_name = months[date.month]
    except KeyError as e:
        return f"Ошибка: Некорректное значение даты (ключ {e} не найден)"

    day = date.day
    year = date.year

    return f"{day_name}, {day} {month_name}, {year} год"

try:
    input_date = input("Введите дату в формате ДД.ММ.ГГГГ: ")
    print(format_date(input_date))
except Exception as e:
    print(f"Непредвиденная ошибка: {str(e)}")
